<h1><%= @restaurant.name %></h1>
<p id="notice"><%= notice %></p>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.restaurant.name %> was <%= review.content %></li>
  <% end %>
</ul>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Food Category:</strong>
  <%= @restaurant.category %>
</p>

<h3>Reviews</h3>
<ul>
  <% @restaurant.reviews.each_with_index do |review, index| %>
    <li><%= index + 1 %>. <%= review.restaurant.name %> was <%= review.content %></li>
    <br>
  <% end %>
</ul>

<p><%= link_to "Add review", new_restaurant_review_path(@restaurant) %></p>
<p><%= link_to 'Edit', edit_restaurant_path(@restaurant) %></p>
<p><%= link_to 'Back', restaurants_path %></p>
